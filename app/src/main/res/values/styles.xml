<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text87</item>
    </style>

    <style name="text.title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>


    <style name="text.appbar">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    <style name="text.bigNumber">
        <item name="android:textSize">86sp</item>
    </style>

    <style name="HomeFragmentLargeButton" parent="Widget.Material3.Button">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">@dimen/btn_large_corner_radius</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!-- TOOLBAR -->

    <style name="appToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/text.title</item>
    </style>
    <style name="appToolbar.Centered">
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
    </style>

</resources>